{
  "name": "el-bot",
  "version": "0.1.2",
  "description": "A quick qq bot for mirai.",
  "private": true,
  "main": "index.ts",
  "types": "index.d.ts",
  "scripts": {
    "build": "npm-run-all --parllel build:*",
    "build:el-bot": "npm run clean && tsc",
    "build:mirai-ts": "cd packages/mirai-ts && tsc",
    "clean": "rm -rf dist",
    "dev": "npm run watch:mirai-ts & sleep 2 && cross-env NODE_ENV=dev nodemon --exec ts-node -r tsconfig-paths/register index.ts",
    "install:mirai": "node scripts/install-mirai-ok.js",
    "install:plugins": "git clone https://github.com/ElpsyCN/el-bot-plugins packages/el-bot-plugins",
    "lint": "eslint . --ext .js,.ts",
    "start": "npm-run-all --parallel start:*",
    "start:bot": "npm run build:el-bot && nodemon dist/index.js",
    "start:mirai": "node scripts/start-mirai-ok.js",
    "webhook": "node scripts/webhook.js",
    "webhook:all": "node scripts/webhook.js --watch el-bot",
    "test": "npm run lint",
    "pull": "npm-run-all --parallel pull:*",
    "pull:el-bot": "git pull",
    "pull:plugins": "cd packages/el-bot-plugins && git pull",
    "pull:config": "cd config/custom && git pull",
    "push:config": "cd config/custom && git add -A && git commit -m ':wrench: update config' && git push",
    "update": "npm run pull && npm install",
    "watch:mirai-ts": "cd packages/mirai-ts && tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elpsycn/el-bot"
  },
  "keywords": [
    "elpsy",
    "bot",
    "mirai",
    "qq"
  ],
  "author": {
    "name": "云游君",
    "email": "me@yunyoujun.cn",
    "url": "https://www.yunyoujun.cn"
  },
  "contributors": [
    "@YunYouJun",
    "@ADD-SP"
  ],
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/elpsycn/el-bot/issues"
  },
  "homepage": "https://docs.bot.elpsy.cn/",
  "dependencies": {
    "chalk": "^4.0.0",
    "dayjs": "^1.8.28",
    "dotenv": "^8.2.0",
    "feedparser": "^2.2.10",
    "follow-redirects": "^1.11.0",
    "github-webhook-handler": "^1.0.0",
    "glob": "^7.1.6",
    "html-to-text": "^5.1.1",
    "js-yaml": "^3.14.0",
    "lokijs": "^1.5.9",
    "mirai-ts": "^0.1.9",
    "node-schedule": "^1.3.2",
    "rss-parser": "^3.8.0",
    "shelljs": "^0.8.4",
    "yargs": "^15.4.0"
  },
  "devDependencies": {
    "@types/html-to-text": "^5.1.1",
    "@types/js-yaml": "^3.12.4",
    "@types/lokijs": "^1.5.3",
    "@types/node": "^14.0.13",
    "@types/node-schedule": "^1.3.0",
    "@types/shelljs": "^0.8.8",
    "@types/ws": "^7.2.5",
    "@types/yargs": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "inquirer": "^7.2.0",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typedoc": "^0.17.7",
    "typescript": "^3.9.5"
  },
  "_moduleAliases": {
    "@utils": "dist/src/utils",
    "@plugins": "packages/el-bot-plugins"
  },
  "directories": {
    "lib": "https://github.com/YunYouJun/mirai-ts"
  }
}
